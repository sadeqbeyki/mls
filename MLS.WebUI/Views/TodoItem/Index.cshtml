@model List<MLS.Domain.Entities.TodoItem>

@{
    ViewData["Title"] = "Index";
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>__</th>
            <th>Title</th>
            <th>List Name</th>
            <th>Creation Date</th>
            <th>Note</th>
            <th>Details</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.ListName</td>
                <td>@item.CreationDate</td>
                <td>@item.Note</td>
                @*<td><a asp-controller="TodoItem" asp-action="Details" asp-route-id="@item.Id">Details</a></td>*@
            </tr>
        }

    </table>
}