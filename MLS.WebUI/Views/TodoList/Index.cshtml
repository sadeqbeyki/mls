@model List<MLS.Domain.Entities.TodoList>

@{
    ViewData["Title"] = "Index";
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>__</th>
            <th>Title</th>
            <th>Description</th>
            <th>Createion Date</th>
            <th>Details</th>
            <th>Add Item</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreationDate</td>
                <td><a asp-controller="TodoList" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                <td><a asp-controller="TodoItem" asp-action="Add">Add Item</a></td>
                @*<td><a asp-controller="TodoItem" asp-action="Add" asp-route-id="@item.Id">Add Item</a></td>*@
            </tr>
        }

    </table>
}